	    		}
	    };
		
		window.squatch.embed = {
			resizeToContent : true
		};
		
		window.squatch.mode = {
				widgetMode: '{{mode}}',
	   			POPUP_MODE : 'POPUP',
	   			EMBED_MODE : 'EMBED',
	   			DEMO_MODE : 'DEMO',
	   			DEMO_EMBED_MODE : 'DEMO_EMBED',
	   			NOCONTENT_MODE : 'NOCONTENT'
		};
		
		
