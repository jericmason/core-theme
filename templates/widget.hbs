			fallbackImg: 'https://www.gravatar.com/avatar/0?d=blank'
		};

		window.squatch.analytics = {
				apikey : '{{segmentApiKey}}',
				attributes : {
					tenant : '{{tenantAlias}}',
					userId : '{{user.id}}',
					accountId : '{{user.accountId}}'
				},
	    		user: {
	    			ident: '{{user.id}}',
	    			traits: {
					tenant : '{{tenantAlias}}',
					accountId : '{{user.accountId}}'
			       }
	    		},
	    		events: {
	    			OPENED_WIDGET : 'Opened Widget',
	    			OPENED_POPUP : 'Opened Popup',
	    			CLOSED_POPUP : 'Closed Popup',
