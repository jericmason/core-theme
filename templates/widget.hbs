	<script type="text/javascript" charset="utf-8">

		window.squatch = window.squatch || {};
		
		window.squatch.user = {
			code: '{{user.referralCode}}',
			rewardAggregates:  {{{rewardBalances}}},
			rewardTest: {{rewardBalances.0.totalDiscountPercent}},
			sharelink: '{{shareLinks.shareLink}}',
			email: {
				share : {
					subject: '{{urlencode "Email Share Subject" space="%20"}}',
					body: '{{urlencode ("Email %s %s share message", user.referralCode, shareLinks.emailShareLink) space="%20"}}',
					mailToLink: 'mailto:?subject=Email%20Share%20Subject&body=Email%20%0D%20MIKENERFERSTON%20http%3A%2F%2Fssqt.ch%2F1kPByMI%20share%20message',
				},
				reminder : {
					subject: 'Email%20Reminder%20Subject',
					body: 'Email%20Reminder%20%0D%20share%20message%20MIKENERFERSTON%20http%3A%2F%2Fssqt.ch%2F1kPBwEz',
					mailToLink: 'mailto:?subject=Email%20Reminder%20Subject&body=Email%20Reminder%20%0D%20share%20message%20MIKENERFERSTON%20http%3A%2F%2Fssqt.ch%2F1kPBwEz',				
